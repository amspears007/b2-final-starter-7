<%= form_with method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :unique_code %>
  <%= f.text_field :unique_code %><br>
  <%= f.label :amount %>
  <%= f.number_field :unit_price, in: 1..90, step: 2 %><br>
  <%= f.label :discount %>
  <%= f.select :discount, [["dollars", "dol"], ["percent", "perc"]],selected: "dol" %><br>

  <%= f.submit "Add Coupon" %>
<% end %>

